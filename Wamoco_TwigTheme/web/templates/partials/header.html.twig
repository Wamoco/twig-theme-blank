<div class="container header">
  <div class="row">
    <div class="col-2">
      <a href="{{ getBaseUrl() }}">
        {% if blockExists('logo') %}
          <img src="{{ getBlock('logo').getLogoSrc }}"
               title="{{ getBlock('logo').getLogoAlt }}"
               alt="{{ getBlock('logo').getLogoAlt }}"
          />
        {% endif %}
      </a>
    </div>
    <div class="col-4">
      <form action="/catalogsearch/result/index" method="GET">
          <input type="search" name="q" id="headerSearch" placeholder="{{'Search entire store here...'|trans}}" value="{{ getRequestParam('q')|escape }}">
          <button type="submit">{{ 'Search'|trans }}</button>
      </form>
    </div>
    <div class="col-6" data-mage-init='{"TwigTemplate": {"path":"partials/customer-icons.html.twig"} }'></div>
  </div>
</div>
<div class="container menu">
  <div class="row">
    <div class="col-12">
      {{ include('partials/menu.html.twig', {menu: getHelper('\\Wamoco\\TwigTheme\\Helper\\Menu').getTree.getChildren }) }}
    </div>
  </div>
</div>

