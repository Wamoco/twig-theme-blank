{% extends 'base.html.twig' %}
{% block body %}
<div class="container">
    <div class="row">
        <h2>{{'Create New Customer Account'|trans}}</h2>
    </div>
    <div class="row">
        <div class="col-12">
          <form action="/customer/account/createpost" method="POST">
            <div class="row">
              <div class="col-12">
                  <label>{{ 'First Name'|trans }} <span>*</span></label>
                  <input type="text" class="form-control" name="firstname" value="">
              </div>
              <div class="col-12">
                  <label>{{ 'Last Name'|trans }} <span>*</span></label>
                  <input type="text" class="form-control" name="lastname" value="">
              </div>
              <div class="col-12">
                  <label for="email">{{ 'Email'|trans }} <span>*</span></label>
                  <input type="text" class="form-control" name="email" id="email" value="">
              </div>
              <div class="col-12">
                  <label for="password">{{ 'Password'|trans }} <span>*</span></label>
                  <input type="password" class="form-control" name="password" id="password" value="">
              </div>
              <div class="col-12">
                  <label>{{ 'Confirm Password'|trans }} <span>*</span></label>
                  <input type="password" class="form-control" name="password_confirmation" value="">
              </div>

            </div>
            <input type="hidden" name="form_key" value="{{ getFormKey }}">
            <div class="col-12">
              <input type="submit" class="form-control btn essence-btn" value="{{'Create an Account'|trans}}">
            </div>
          </form>
        </div>
    </div>
</div>
{% endblock %}
